<!DOCTYPE html>
<html>
  <head>
    <title>Connecti</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="common-header">
      <div class='logo'>
        <img width="45" src="http://www.stickpng.com/assets/images/5848576ba6aca45b5a5c95b7.png">
        <h2>&nbsp&nbspConnecti!</h2>
      </div>

      <div class='auth-info-links'>
        <% if user_signed_in? %>
        <p><%= current_user.email %></p>
        <p><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>

        <% else %>

          <p><%= link_to "Sign In", new_user_session_path %></p>
          <p><%= link_to "Sign Up", new_user_registration_path %></p>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>

